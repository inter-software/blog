


<div class = "container">

<h1>Listing Articles</h1>
 
<%= link_to 'New article', new_article_path, :class => 'btn btn-outline-primary' %>


<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Text</th>
    
  </tr>
 
  <% @article.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), :class => 'btn btn-outline-info' %></td>
      <td><%= link_to 'Edit', edit_article_path(article) , :class => 'btn btn-outline-warning' %></td>
      <td><%= link_to 'Destroy', article_path(article), 
            method: :delete,
            data: { confirm: 'Are you sure?' },
            :class => 'btn btn-outline-danger' %></td>
    </tr>
  <% end %>
</table>
</div>