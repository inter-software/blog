
<div class="container">
<div class="card">
  <div class="card-body">
        
        <p>
            <strong>Title:</strong>
            <%= @article.title %>
        </p>
        
        <p>
            <strong>Text:</strong>
            <%= @article.text %>
        </p>


        <div class="row">
            <div class="col">

                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active">
                        Files DownLoad
                    </a>
                    <% if @article.attachments? %>
                      <% @article.attachments.each do |attachment| %>
                        <a class="list-group-item list-group-item-action">
                            <%=  link_to(image_tag('file_2.png', width: '30', height: '25', alt: 'File DownLoad'),
                                attachment.url, target: '_blank',
                                class: 'list-group-item list-group-item-action')%>
                        </a>
                      <% end %>
                    <% end %>
                </div>
            </div>
            <div class="col"></div>
        </div>

        <br><br>

        <%= render partial: 'comments/comments', locals: {commentable: @article} %>
        <%= render partial: 'comments/form', locals: {commentable: @article}%>


        <br><br>

        <%= link_to 'Edit', edit_article_path(@article), :class => 'btn btn-outline-primary btn-sm' %> |
        <%= link_to 'Back', articles_path, :class => 'btn btn-outline-success btn-sm' %>         
    </div>
</div>
</div>