<div class="container">
  <br><br>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Question</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @answers.each do |question| %>
      <tr>
        <td><%= question.user.email %></td>
        <td><%= question.question %></td>
        <td>
          <%= link_to 'Show', question_path(question), :class => 'btn btn-outline-primary btn-sm' %>
        </td>

        <td>
          <%= link_to 'Edit', edit_question_path(question), :class => 'btn btn-outline-warning btn-sm' %>
        </td>

        <td>
          <%= link_to 'Destroy', question_path(question),
                      method: :delete,
                      data: { confirm: 'Are you Sure?' },
                      :class => 'btn btn-outline-danger btn-sm'
          %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New survey', new_question_path, :class => 'btn btn-outline-primary btn-sm' %>

</div>