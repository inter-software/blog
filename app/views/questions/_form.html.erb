<%= form_with  model: @questions, local: true do |form| %>

  <% if @questions.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@questions.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @questions.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :question %>
    <%= form.text_field :question, class: "form-control" %>
  </div>

  <p>
    <%= form.label :survey_id %><br>
    <%=
      form.collection_select :survey_id, Survey.order(:survey_name).all, :id, :survey_name,
                             class: "form-control",
                             prompt: "Select Survey Name"
    %>
  </p>
  <p>
    <%= form.submit 'Guardar', :class => 'btn btn-outline-primary btn-sm' %>
  </p>



<% end %>
