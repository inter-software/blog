<%= form_with(model: @verified, local: true) do |form| %>
 
    <p>
      <%= form.label :article_id %><br>
      <%= form.collection_select :article_id, Article.all, :id, :title, class: "form-control", 
                prompt: "Seleccione Articulo" %>
    </p>

    <p>
        <%= form.label :user_id %><br>
        <%= form.collection_select :user_id, User.all, :id, :email, class: "form-control", 
                prompt: "Seleccione Usuario" %>
    </p>

    <div>
      <%= form.label :date %>
      <%= form.datetime_select :date, :class => 'form-control' %>
    </div>
   
    <p>
      <%= form.label :comment %><br>
      <%= form.text_area :comment, :class => 'form-control' %>
    </p>
     
    <p>
      <%= form.submit 'Guardar', :class => 'btn btn-outline-primary btn-sm' %>
    </p>

    
   
  <% end %>
  