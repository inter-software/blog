<div class="container">
  <br><br>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Response</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question.question %></td>
        <td><%= answer.response %></td>
        <td>
          <%= link_to 'Show', answer_path(answer), :class => 'btn btn-outline-primary btn-sm' %>
        </td>

        <td>
          <%= link_to 'Edit', edit_answer_path(answer), :class => 'btn btn-outline-warning btn-sm' %>
        </td>

        <td>
          <%= link_to 'Destroy', answer_path(answer),
                      method: :delete,
                      data: { confirm: 'Are you Sure?' },
                      :class => 'btn btn-outline-danger btn-sm'
          %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New survey', new_answer_path, :class => 'btn btn-outline-primary btn-sm' %>

</div>