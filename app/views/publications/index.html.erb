<div class="container">
  <br><br>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>ID</th>
      <th>Text</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.id %></td>
        <td><%= publication.name %></td>
        <td><%= publication.desc %></td>

        <td>
          <%= link_to 'Show', publication_path(publication), class: 'btn btn-outline-primary btn-sm' %>
        </td>

        <td>
          <%= link_to 'Edit', edit_publication_path(publication), class: 'btn btn-outline-warning btn-sm' %>
        </td>

        <td>
          <%= link_to 'Destroy', publication_path(publication),
                      method: :delete,
                      data: { confirm: 'Are you Sure?' },
                      class:  'btn btn-outline-danger btn-sm'
          %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Answer Options', new_publication_path, :class => 'btn btn-outline-primary btn-sm' %>

</div>