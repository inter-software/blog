<%= form_with(model: @publication, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :desc %>
    <%= form.text_area :desc, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-outline-primary btn-sm'  %>
  </div>
<% end %>
