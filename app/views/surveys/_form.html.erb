<div class="container">
<%= form_for  @survey, local: true do |form| %>

  <div class="form-group">
    <%= form.label :survey_name %>
    <%= form.text_field :survey_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :survey_desc %><br>
    <%= form.text_area :survey_desc, class: "form-control" %>
  </div>

    <!-- Add Nested Forms the Questions -->
  <div class="form-group">
    <h4>Questions</h4>
      <%= form.fields_for :questions do |question| %>
        <div id="questions">
          <div class="field">
            <%= render 'question_fields',  f: question %>
          </div>
        </div>
      <% end %>
      <div class="col">
        <%= link_to_add_association 'Add Question', form, :questions, class: 'btn btn-info btn-sm' %>
      </div>
    </div>


  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-outline-primary btn-sm' %>
  </div>

<% end %>
</div>