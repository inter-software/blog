<%= form_with(model: @survey, local: true) do |form| %>

  <div>
    <%= form.label :survey_name %>
    <%= form.text_field :survey_name, class: "form-control" %>
  </div>

  <p>
    <%= form.label :survey_desc %><br>
    <%= form.text_area :survey_desc, class: "form-control" %>
  </p>

  <p>
    <%= form.submit 'Save', class: 'btn btn-outline-primary btn-sm' %>
  </p>

<% end %>
