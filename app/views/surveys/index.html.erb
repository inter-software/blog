<div class="container">
  <br><br>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th></th>
      <th>ID</th>
      <th>Survey Name</th>
      <th>Survey Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= link_to 'Question', survey_questions_path(survey), class: 'btn btn-info' %></td>
        <td><%= survey.id %></td>
        <td><%= survey.survey_name %></td>
        <td><%= survey.survey_desc %></td>

        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Admin
            </button>
            <div class="dropdown-menu">
              <a><%= link_to 'Show', survey_path(survey), class: 'dropdown-item', data: {toggle: "#staticBackdrop", target: "#staticBackdrop"}  %></a>
              <a><%= link_to 'Edit', edit_survey_path(survey), class: 'dropdown-item' %></a>
              <a>
                <%= link_to 'Destroy', survey_path(survey),
                            method: :delete,
                            data: { confirm: 'Are you Sure?' },
                            class: 'dropdown-item'
                %>
              </a>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Survey', new_survey_path, class: "btn btn-primary", data: { toggle: 'modal', target: '#exampleModal'}%>


</div>


